set(PACKAGE_NAME @PROJECT_NAME@)
set(simucpp_VERSION @simucpp_VERSION_MAJOR@.@simucpp_VERSION_MINOR@.@simucpp_VERSION_PATCH@)

set(simucpp_LIBS @CMAKE_INSTALL_PREFIX@/lib/libsimucpp.a)
set(simucpp_INCLUDE_DIRS @CMAKE_INSTALL_PREFIX@/include)
set(USE_TRACELOG @USE_TRACELOG@)
set(USE_ZHNMAT @USE_ZHNMAT@)
set(USE_MPLT @USE_MPLT@)

if(USE_TRACELOG)
    list(APPEND simucpp_LIBS @tracelog_LIBS@)
    find_package(tracelog REQUIRED)
    add_definitions(-DUSE_TRACELOG)
    if (UNIX)
        add_compile_options(-Wno-psabi)
        message(STATUS "simucpp: GCC 7.1 warning was ignored.")
    endif ()
endif()
if(USE_ZHNMAT)
    list(APPEND simucpp_LIBS @zhnmat_LIBS@)
    find_package(zhnmat REQUIRED)
    add_definitions(-DUSE_ZHNMAT)
    if (UNIX)
        add_compile_options(-Wno-psabi)
        message(STATUS "simucpp: GCC 7.1 warning was ignored.")
    endif ()
endif()
if(USE_MPLT)
    list(APPEND simucpp_LIBS @matplotlibcpp_LIBS@)
    list(APPEND simucpp_INCLUDE_DIRS @matplotlibcpp_INCLUDE_DIRS@)
    find_package(matplotlibcpp REQUIRED)
endif()
